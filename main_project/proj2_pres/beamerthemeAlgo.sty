\mode<presentation>

\setbeamertemplate{frametitle}[default][center]
\setbeamertemplate{itemize items}[ball]
\setbeamertemplate{footline}[logo]
\setbeamercolor{item projected}{bg=red}

\setbeamercolor{section in head/foot}{use=structure,bg=red!25!bg}
\setbeamercolor{title}{fg=red!60!bg}
\setbeamercolor{frametitle}{fg=red!60!bg}


\useinnertheme[shadow=true]{rounded}
\useoutertheme[footline=authortitle,subsection=false]{miniframes}



\AtBeginDocument{%
  {
    \usebeamercolor{section in head/foot}
  }
  
  \pgfdeclareverticalshading{beamer@headfade}{\paperwidth}
  {%
    color(0cm)=(bg);
    color(1.25cm)=(section in head/foot.bg)%
  }

  \setbeamercolor{section in head/foot}{bg=}
}

\setbeamerfont{block title}{size={}}
\addtoheadtemplate{\pgfuseshading{beamer@headfade}\vskip-1.25cm}{}

